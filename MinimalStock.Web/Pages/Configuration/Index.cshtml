@page
@model MinimalStock.Web.Pages.Configuration.IndexModel
@{
}

<div class="configuration-group">
    <div class="row">
        <div class="col-auto">
            <h2>Categories</h2>
        </div>
        <div class="col-sm-2">
            <a asp-page="./Category/Create" class="btn btn-outline-success">Add</a>
        </div>
    </div>
    <hr />
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Configuration.Categories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="edit-icon" asp-page="./Category/Edit" asp-route-id="@item.Oid"><i class="material-icons">edit</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>